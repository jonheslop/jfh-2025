---
import { Font } from "astro:assets";
import Footer from "../components/Footer.astro";

import Logo from "../components/Logo.astro";
import me from "../assets/jon-heslop-2024.jpg";

import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" href="/noise.svg" as="image" fetchpriority="high" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#fff" />
    <title>{title} | Jon Heslop</title>
    <meta
      name="description"
      content="Jon Heslop is a front end developer based in London."
    />
    <meta property="og:image" content={me.src} />
    <Font cssVariable="--font-soehne" preload />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="jonheslop.com"
      href={new URL("feed.xml", Astro.site)}
    />
  </head>
  <body class="p-1 sm:p-2 md:p-4 dark:bg-black">
    <div
      class="bg-fixed bg-fenix-red bg-size-[100px] lg:bg-size-[200px] rounded-xs"
      style="background-image: url(/noise.svg);"
    >
      <div
        class="font-sans antialiased
 dark:bg-neutral-950/80 text-white/90 dark:text-white/80 relative p-2 sm:p-4 lg:p-8 font-medium grid sm:grid-cols-2 lg:grid-cols-12 gap-x-8 gap-y-24 lg:pb-32"
      >
        <div
          class="col-span-full row-span-full sticky top-3 lg:top-8 z-50 flex justify-between items-center"
        >
          <Logo />
          <ul class="flex flex-wrap gap-x-8 ml-16 justify-end">
            <li><a href="/stream">Stream</a></li>
            <li><a href="/links">Links</a></li>
            <li><a href="/posts">Posts</a></li>
            <li><a href="/photos">Photos</a></li>
            <li><a href="/listening">Listening</a></li>
            <li><a href="/about">About</a></li>
          </ul>
        </div>

        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>
