---
import Layout from "../components/Layout.astro";
import PostList from "../components/PostList.astro";
import LatestPost from "../components/LatestPost.astro";
---

<Layout title="Hello">
  <section class="lg:col-span-6 xl:col-span-4 xl:col-start-3 lg:row-start-2">
    <h1 class="text-sm uppercase font-semibold mb-4 text-white/70">
      Recent posts
    </h1>
    <LatestPost type="posts" />
    <PostList type="posts" recent={true} />
  </section>
  <section
    class="lg:col-span-6 xl:col-span-4 xl:col-start-9 lg:row-start-2 flex flex-col"
  >
    <h1 class="text-sm uppercase font-semibold mb-4 text-white/70">
      Recent photo posts
    </h1>
    <LatestPost type="photos" />
    <PostList type="photos" recent={true} />
  </section>
</Layout>
